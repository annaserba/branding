{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src", 
    "paths": {
      "@*": ["src/*"],
    },
  },
  "include": ["src", "../../server/base.tsx", "../../server/routing.tsx", "../../server/server.tsx", "../brand/src/rgd/common", "../brand/src/rgd/desktop", "../brand/src/rgd/mobile"],
}
